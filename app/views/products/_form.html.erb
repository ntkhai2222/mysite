<%= form_with model: product do |form| %>
<div class="form-floating mt-3">
                <%= form.text_field :name, class:"form-control"%>
                <%= form.label :name, class:"form-label" %>
            </div>
            <div class="form-floating mt-3">
                <%= form.text_field :price, class:"form-control" %>
                <%= form.label :price, class:"form-label" %>
            </div>
            <div class="form-floating mt-3">
                <%= form.number_field :inventory_count, class:"form-control" %>
                <%= form.label :inventory_count, style: "display: block",class:"form-label" %>
            </div>
            <div class="from-floating mt-3">
                <%= form.file_field :featured_image, accept: "image/*",class:"form-control" %>
                <%= form.label :"", class:"form-label" %>
            </div>
            <div class="form-floating mt-3">
                <%= form.text_area :description, class:"form-control", style:"height:200px"%>
                <%= form.label :description, class:"form-label" %>
            </div>
            <div class="mt-3">
                <%= form.submit "Hoàn tất", class:"btn btn-success"%>
            </div>
<% end %>