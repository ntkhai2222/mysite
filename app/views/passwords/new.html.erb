<div class="p-5">
  <h1>Forgot your password?</h1>

  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <div class="w-50">
    <%= form_with url: passwords_path do |form| %>
      <div class="form-floating">
        <%= form.email_field :email_address, required: true,class:"form-control",id:"email", autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %>
        <label class="form-label" for="email">Email</label>
      </div>
      <div class="mt-3">
        <%= form.submit "Email reset instructions", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
