<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="p-5 w-50">
  <h1>Đăng nhập ...</h1>
  <%= form_with url: session_path do |form| %>
    <div class="form-floating mt-3">
      <%= form.email_field :email_address,id:"floatingInput", required: true, autofocus: true, autocomplete: "username",class:"form-control", placeholder: "Enter your email address", value: params[:email_address] %>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating mt-3">
      <%= form.password_field :password,id:"floatingPassword",class:"form-control", required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %>
      <label for="floatingPassword">Password</label>
    </div>
    <div class="mt-3" style="display:flex;justify-content:space-between">
      <%= form.submit "Sign in",class:"btn btn-primary" %>
      <%= link_to "Forgot password?", new_password_path,class:"text-danger" %>
    </div>
  <% end %>
</div>
